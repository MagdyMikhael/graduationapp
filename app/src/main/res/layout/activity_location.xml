<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:isScrollContainer="true"
    android:nestedScrollingEnabled="true"

    tools:context="com.example.migosoft.graduationproject.LocationActivity">

    <TextView
        android:id="@+id/tv_targetLoc"
        android:layout_width="592dp"
        android:layout_height="65dp"


        android:background="@android:color/background_light"
        android:text="Target Address"
        android:textSize="35dp"
        android:textStyle="bold"
        android:layout_marginBottom="@android:dimen/app_icon_size"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.671" />

    <fragment
            android:id="@+id/map"
            android:name="com.google.android.gms.maps.MapFragment"
            android:layout_width="601dp"
            android:layout_height="568dp"
            tools:layout_editor_absoluteY="4dp"
            tools:layout_editor_absoluteX="0dp" />




            <ImageView
                android:id="@+id/iv_forward"
                android:layout_width="80dp"
                android:layout_height="80dp"
                app:srcCompat="@mipmap/forward"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.895"
                app:layout_constraintHorizontal_bias="0.74" />



                <ImageView
                    android:id="@+id/iv_left"
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:layout_weight="1"
                    app:srcCompat="@mipmap/left"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintVertical_bias="1.0"
                    app:layout_constraintHorizontal_bias="0.551"/>

                <ImageView
                    android:id="@+id/iv_stop"
                    android:layout_width="100dp"
                    android:layout_height="80dp"
                    android:layout_weight="1"
                    app:srcCompat="@mipmap/stop"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintVertical_bias="0.842"
                    app:layout_constraintHorizontal_bias="0.0" />

                <ImageView
                    android:id="@+id/iv_right"
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:layout_weight="1"
                    app:srcCompat="@mipmap/right"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintVertical_bias="1.0"
                    app:layout_constraintHorizontal_bias="0.93"/>



            <ImageView
                android:id="@+id/iv_backward"
                android:layout_width="80dp"
                android:layout_height="80dp"
                app:srcCompat="@mipmap/backward"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="1.0"
                app:layout_constraintHorizontal_bias="0.74" />

            <Button
                android:id="@+id/btn_back"
                android:layout_width="120dp"
                android:layout_height="80dp"
                android:background="@mipmap/back"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="1.0"
                app:layout_constraintHorizontal_bias="0.0" />

    <Button
        android:id="@+id/btn_here"
        android:layout_width="120dp"
        android:layout_height="48dp"
        android:background="@drawable/btn_statues"

        android:text="my Location"
        android:textSize="12dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.746"
        app:layout_constraintHorizontal_bias="0.379" />
    <Button
        android:id="@+id/btn_target"
        android:layout_width="120dp"
        android:layout_height="48dp"
        android:background="@drawable/btn_statues"
        android:text="Target Location"
        android:textSize="10dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.814"
        app:layout_constraintHorizontal_bias="0.379" />


</android.support.constraint.ConstraintLayout>
