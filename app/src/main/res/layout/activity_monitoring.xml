<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@mipmap/moni"
    android:isScrollContainer="true"
    android:nestedScrollingEnabled="true"
    tools:context="com.example.migosoft.graduationproject.MonitoringActivity">


        <TextView
            android:id="@+id/tv_myLoc"
            android:layout_width="600dp"
            android:layout_height="100dp"

            android:background="@android:color/background_light"
            android:text="myLocation"
            android:textSize="40dp"
            android:textStyle="bold"
            android:layout_marginBottom="@android:dimen/app_icon_size"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.725" />

        <TextView
            android:id="@+id/tv_BPM"
            android:layout_width="600dp"
            android:layout_height="100dp"
            android:layout_marginTop="@android:dimen/app_icon_size"
            android:background="@android:color/background_light"
            android:text="BPM"
            android:textSize="@android:dimen/app_icon_size"
            android:textStyle="bold"
            android:layout_marginBottom="@android:dimen/app_icon_size"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.079"
            app:layout_constraintHorizontal_bias="1.0" />

        <TextView
            android:id="@+id/tv_Temp"
            android:layout_width="600dp"
            android:layout_height="100dp"
            android:layout_marginTop="@android:dimen/app_icon_size"
            android:background="@android:color/background_light"
            android:text="Temp"
            android:textSize="@android:dimen/app_icon_size"
            android:textStyle="bold"
            android:layout_marginBottom="@android:dimen/app_icon_size"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.275"
            app:layout_constraintHorizontal_bias="0.0" />

        <TextView
            android:id="@+id/tv_Speed"
            android:layout_width="600dp"
            android:layout_height="100dp"
            android:layout_marginTop="@android:dimen/app_icon_size"
            android:background="@android:color/background_light"
            android:text="Speed"
            android:textSize="@android:dimen/app_icon_size"
            android:textStyle="bold"
            android:layout_marginBottom="@android:dimen/app_icon_size"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintVertical_bias="0.499" />

        <Button
            android:id="@+id/btn_Location"
            android:layout_width="291dp"
            android:layout_height="89dp"
            android:layout_marginTop="@android:dimen/app_icon_size"
            android:background="@drawable/btn_statues"
            android:text="Find Location"
            android:textSize="18dp"

            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.962"
            app:layout_constraintHorizontal_bias="0.505" />



</android.support.constraint.ConstraintLayout>
